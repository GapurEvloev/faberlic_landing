.section--ideas
   //-

.ideas
   display flex
   flex-direction column-reverse
   position relative

   &__text
      text-align center
      margin-bottom 40px
      max-width 100%
      line-height 1.77

   &__images
      margin-bottom 40px
      position relative
   
   &__img
      max-width 100%

      &--desktop
         display none
      
      &--1
         width 70%
      
      &--2
         position absolute
         top 50%
         right -3%
         transform translateY(-45%)
         width 50%

   +md-block()
      flex-direction row
      align-items center
      justify-content space-between

      &__col
         
         &--left
            width 50%
            padding 0 20px
         
         &--right
            width 44%
         
      // &__cnt
      //    padding 0 40px
         
      &__text
         margin-bottom 0
      
      &__img
         max-width 100%

         &--mobile
            display none

         &--desktop
            display block

         &--2
            right -5%
 
   +lg-block()
      margin-bottom 40px

      &__col
         padding 0 40px

         &--left
            width 55%
         
         &--right
            width 44%
   
   +xl-block()
      margin-bottom 70px

.petals
   display none
   position absolute!important
   left 0
   width 100%

   +lg-block()
      display block
      
      .petal
         position absolute!important

         &--1
            left 45%!important
            top 5vw!important
         
         &--2
            left unset!important
            right 10px!important
            top 10vw!important
   +xl-block()
      display block
      
      .petal
         position absolute!important

         &--1
            left 47%!important
            top 100px!important
         
         &--2
            left unset!important
            right 10px!important
            top 10vw!important