.coquette
    padding 20px 0 35px
    margin-top 20px
    position relative
    text-align center

    &__flowers
        display none
    
    &__bg
        &-svg
            display none
    
    

// coquette__bg-svg
.bnt-row
    text-align center
    margin-bottom 65px
    
    .bnt
        color #fff
        font-weight: 600;
        font-size: 14px;
        line-height: 1
        text-transform uppercase
        background-color #E36FA4
        display inline-flex
        padding 18px
        cursor: pointer

// Рассыпающаяся кнопка
.action {
	position: absolute;
	top: 0;
	right: 0;
	background: none;
	margin: 2rem;
	border: 0;
	padding: 0;
	opacity: 0;
	pointer-events: none;
}

.action:focus {
	outline: none;
}

.particles {
	position: relative;
	grid-area: 1 / 1 / 2 / 2;
}

.particles-canvas {
	position: absolute;
	pointer-events: none;
	top: 50%;
	left: 50%;
	transform: translate3d(-50%,-50%,0);
}

.particles-wrapper {
	position: relative;
	display: inline-block;
    overflow: hidden;
}

.particles-button:focus {
	outline: none;
}

.no-js .particles-button {
	grid-area: 1 / 1 / 2 / 2;
}
