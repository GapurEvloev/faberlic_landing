mixin Slider(data,idprev,idnext) 
    .swiper-container&attributes(attributes)
        .slider.swiper-wrapper
            each slide in data
                .slider__slide.slide.swiper-slide
                    .slide__img(style="background-image: url("+slide.img+")")
                    if slide.title
                        .slide__title!=slide.title
                    .slide__price
                        if slide.oldprice
                            span.slide__price-old!=slide.oldprice
                        if slide.saleprice
                            span.slide__price-sale!=slide.saleprice
                        span.slide__price-valute Ñ€.
